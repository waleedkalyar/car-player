<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardBackgroundColor="#212121"
    android:layout_margin="4dp"
    android:orientation="vertical"
    app:cardCornerRadius="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animationView"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:lottie_rawRes="@raw/lottie_playing"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>
        <ImageButton
            android:id="@+id/btnPlay"
            android:layout_width="45dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toTopOf="@id/animationView"
            app:layout_constraintEnd_toEndOf="@id/animationView"
            android:background="?actionBarItemBackground"
            android:src="@drawable/ic_play"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:tint="@color/white" />
        <ProgressBar
            android:id="@+id/pbLoading"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@id/animationView"
            app:layout_constraintEnd_toEndOf="@id/animationView"
            android:background="?actionBarItemBackground"
            android:visibility="gone"
            tools:visibility="visible"
            android:indeterminateTint="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:tint="@color/white" />

     <TextView
         android:id="@+id/tvTitle"
         android:layout_width="0dp"
         android:layout_height="wrap_content"
         app:layout_constraintStart_toEndOf="@id/animationView"
         app:layout_constraintTop_toTopOf="parent"
         app:layout_constraintBottom_toTopOf="@id/tvUrl"
         app:layout_constraintEnd_toStartOf="@id/tvChannel"
         android:textColor="@color/white"
         android:layout_marginEnd="8dp"
         android:textSize="16sp"
         tools:text="Radio 3 Stream"/>
        <TextView
            android:id="@+id/tvChannel"
            android:layout_width="0dp"
            app:layout_constraintWidth_default="wrap"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/tvTitle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvUrl"
            app:layout_constraintEnd_toStartOf="@id/btnBoxLauncher"
            android:textColor="@color/black"
            android:paddingHorizontal="4dp"
            android:paddingVertical="2dp"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            android:background="@drawable/bg_round_rec"
            tools:text="Channel 4"/>
        <TextView
            android:id="@+id/tvUrl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/animationView"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnBoxLauncher"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            tools:text="@string/https_example_com"/>

        <ImageButton
            android:id="@+id/btnBoxLauncher"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_arrow_launcher"
            android:background="?actionBarItemBackground"
            app:layout_constraintEnd_toStartOf="@id/btnFav"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white"/>
        <ImageButton
            android:id="@+id/btnFav"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_fav_outlined"
            android:background="?actionBarItemBackground"
            app:layout_constraintEnd_toStartOf="@id/btnOptions"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/red" />
        <ImageButton
            android:id="@+id/btnOptions"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="@null"
            android:src="@drawable/ic_more"
            android:background="?actionBarItemBackground"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>